@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background: linear-gradient(to bottom, skyblue, lightgray);
        font-family: Arial, sans-serif;
        color: #333;
    }

    h1 {
        color: skyblue;
        font-weight: bold;
        text-align: center;
        margin-bottom: 0em;
    }

    #account {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        position: relative;
        z-index: 1;
    }

    .form-floating {
        margin-bottom: 20px;
    }

    .form-control {
        border: 1px solid #b0c4de;
        border-radius: 5px;
        height: 50px;
        background-color: #f0f8ff;
    }

    #login-submit {
        background-color: #4a90e2;
        border: none;
        border-radius: 20px;
        padding: 10px;
        color: white;
        font-size: 18px;
        transition: background-color 0.3s ease;
    }

        #login-submit:hover {
            background-color: #357ab7;
        }

    .row {
        display: flex;
        justify-content: center;
        margin-top: 1em;
    }

    #forgot-password, #resend-confirmation {
        color: #4a90e2;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        #forgot-password:hover, #resend-confirmation:hover {
            color: #357ab7;
        }

    .checkbox label {
        font-size: 14px;
        color: #333;
    }


    .left-image, .right-image {
        position: absolute;
        width: 150px;
        opacity: 0.8;
        z-index: 0;
    }


    .left-image {
        position: absolute;
        width: 23em;
        opacity: 0.8;
        left: 6em;
        top: 15em;
    }

    .right-image {
        position: absolute;
        width: 23em;
        opacity: 0.8;
        right: 6em;
        top: 15em;
    }
</style>

<h1>@ViewData["Title"]</h1>
<div class="row">

    <img src="/images/cloud.png" alt="Clouds Left" class="left-image">

    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2 class="d-flex justify-content-center">Log in to continue</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating">
                    <input asp-for="Input.Username" class="form-control" autocomplete="off" aria-required="true" placeholder="Username" />
                    <label asp-for="Input.Username" class="form-label">Username</label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="off" aria-required="true" placeholder="Email" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="off" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        Remember me
                    </label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>

                <div class="text-center mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

    <img src="/images/cloud.png" alt="Clouds Right" class="right-image">

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}