@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-color: #f5f5f5; /* Smoke gray */
        color: #333;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: skyblue;
        font-weight: bold;
        text-align: center;
        margin-bottom: 0em;
    }

    #registerForm {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        position: relative;
        z-index: 1;
    }

    .form-floating {
        margin-bottom: 20px;
    }

    .form-control {
        border: 1px solid #b0c4de;
        border-radius: 5px;
        height: 50px;
        background-color: #f0f8ff;
    }

    #registerSubmit {
        background-color: #4a90e2;
        border: none;
        border-radius: 20px;
        padding: 10px;
        color: white;
        font-size: 18px;
        transition: background-color 0.3s ease;
    }

        #registerSubmit:hover {
            background-color: #357ab7;
        }

    .form-container {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        margin-top: 3em;
    }

    .left-image, .right-image {
        position: absolute;
        width: 150px;
        opacity: 0.8;
        z-index: 0;
    }

    .left-image {
        position: absolute;
        width: 22em;
        opacity: 0.8;
        left: -0.5em;
        top: 5.5em;
    }

    .right-image {
        position: absolute;
        width: 22em;
        opacity: 0.8;
        right: -0.5em;
        top: 5.5em;
    }

    #registerForm {
        max-height: 325px;
        overflow: hidden;
        transition: max-height 0.3s ease-in-out;
    }

        #registerForm:hover {
            max-height: 500px;
            overflow: auto;
        }

</style>

<h1>@ViewData["Title"]</h1>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<div class="form-container">

    <img src="/images/cloud.png" alt="Clouds Left" class="left-image">

    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h2 class="d-flex justify-content-center">Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="First Name" />
                <label asp-for="Input.FirstName">First Name</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Last Name" />
                <label asp-for="Input.LastName">Last Name</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Username" class="form-control" aria-required="true" placeholder="Username" />
                <label asp-for="Input.Username">Username</label>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ProfilePicture" class="form-label">Upload Profile Picture</label>
                <input type="file" asp-for="Input.ProfilePicture" class="form-control" />
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Description" class="form-label">Description (Bio)</label>
                <textarea asp-for="Input.Description" class="form-control" placeholder="Tell us about yourself"></textarea>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <p><strong>Gender (optional):</strong></p>
                <div class="form-check">
                    <input asp-for="Input.Gender" type="radio" class="form-check-input" value="Male" id="genderMale">
                    <label class="form-check-label" for="genderMale">Male</label>
                </div>
                <div class="form-check">
                    <input asp-for="Input.Gender" type="radio" class="form-check-input" value="Female" id="genderFemale">
                    <label class="form-check-label" for="genderFemale">Female</label>
                </div>
                <div class="form-check">
                    <input asp-for="Input.Gender" type="radio" class="form-check-input" value="NonBinary" id="genderNonBinary">
                    <label class="form-check-label" for="genderNonBinary">Non-Binary</label>
                </div>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.BirthDay" class="form-control" type="date" id="birthDate" placeholder="Birth Date" />
                <label asp-for="Input.BirthDay">Birth Date (optional)</label>
                <span asp-validation-for="Input.BirthDay" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.City" class="form-control" placeholder="City" />
                <label asp-for="Input.City">City</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Country" class="form-control" placeholder="Country" />
                <label asp-for="Input.Country">Country</label>
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="Email" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>

    <img src="/images/cloud.png" alt="Clouds Right" class="right-image">

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
