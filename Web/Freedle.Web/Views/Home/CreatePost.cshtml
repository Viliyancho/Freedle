@model Freedle.Web.ViewModels.CreatePostViewModel

@{
    ViewData["Title"] = "Create a New Post";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Create a New Post</h2>

            <!-- Формата за създаване на пост -->
            <form asp-action="CreatePost" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <!-- Image Upload -->
                <div class="form-group text-center">
                    <label asp-for="ImageURL" class="control-label">Add a photo</label>
                    <input type="file" asp-for="ImageURL" class="form-control mx-auto" style="width: 80%;" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>

                <!-- Content Input -->
                <div class="form-group text-center">
                    <label asp-for="Content" class="control-label">Add content...</label>
                    <textarea asp-for="Content" class="form-control mx-auto" rows="5" style="width: 80%;"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary create-post-btn">Create Post</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Фон на страницата */
    body {
        background-color: lightgray;
        font-family: Arial, sans-serif;
    }


    /* Стил за заглавието */
    h2 {
        text-align: center;
        color: SkyBlue;
    }

    /* Центриране на формата */
    .container {
        margin-top: 50px;
    }

    /* Полета за въвеждане */
    .form-group label {
        font-weight: bold;
        display: block;
        margin-top: 2em;
        margin-bottom: 5px;
    }

    /* Стилизация на бутона */
    .create-post-btn {
        margin-top:1.9em;
        padding: 12px 24px;
        font-size: 18px;
        transition: all 0.3s ease-in-out;
    }

        .create-post-btn:hover {
            background-color: darkblue;
            transform: scale(1.6);
        }
</style>
