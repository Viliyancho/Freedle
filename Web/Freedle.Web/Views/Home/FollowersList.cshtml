@model List<UserViewModel>

<h2 class="title">Followers</h2>
<ul class="user-list">
    @foreach (var user in Model)
    {
        <li class="user-item">
            <img class="profile-pic" src="@user.ProfilePictureUrl" alt="Profile Picture">
            <span class="username">
                <a href="@Url.Action("UserProfile", "Home", new { id = user.Id })" class="profile-link">
                    @user.Username
                </a>
            </span>
            <form method="post" action="@Url.Action("RemoveFollower", "Home")">
                @Html.AntiForgeryToken()
                <input type="hidden" name="userId" value="@user.Id">
                <button type="submit" class="remove-follower-btn">Remove</button>
            </form>
        </li>
    }
</ul>

<style>
    body {
        background: linear-gradient(to bottom, skyblue, lightgray);
        font-family: Arial, sans-serif;
        text-align: center;
    }

    .title {
        text-align: center;
        font-size: 32px; /* По-голям размер */
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: #333;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
        position: relative;
        padding-bottom: 10px;
    }

    /* Добавяме underline ефект */
    .title::after {
        content: "";
        width: 80px;
        height: 4px;
        background-color: #ff4d4d;
        position: absolute;
        left: 50%;
        bottom: 0;
        transform: translateX(-50%);
        border-radius: 2px;
    }


    .user-list {
        list-style: none;
        padding: 0;
        max-width: 500px; /* Увеличаваме ширината */
        margin: auto;
    }

    .user-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #f9f9f9;
        padding: 15px; /* Увеличаваме padding-a */
        margin-bottom: 12px;
        border-radius: 12px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, background-color 0.3s ease;
        width: 100%;
    }

        .user-item:hover {
            transform: scale(1.03);
            background-color: #f1f1f1;
        }

    .profile-pic {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 15px;
    }

    .username {
        flex-grow: 1;
        font-size: 18px;
        font-weight: bold;
        color: #333;
        margin-right: 15px;
    }

    .remove-follower-btn {
        background-color: #ff4d4d;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s;
    }

        .remove-follower-btn:hover {
            background-color: #cc0000;
            transform: scale(1.1);
        }

    .profile-link {
        text-decoration: none;
        color: black;
        font-weight: bold;
    }

        .profile-link:hover {
            color: skyblue;
        }

</style>
