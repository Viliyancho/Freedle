@model NewsFeedViewModel

@{
    ViewData["Title"] = "Home - Freedle";
}

<div class="container mt-4">
    <!-- Заглавие в центъра -->
    <h1 class="text-center fw-bold text-primary">Welcome to Freedle</h1>

    <div class="row mt-4">
        <!-- Лява страна -->
        <div class="col-md-3 bg-light text-center p-3 rounded">
            <h5 class="fw-bold">Left Section</h5>
            <p>Coming soon...</p>
        </div>

        <!-- Централна част - Постове -->
        <div class="col-md-6">
            <h2 class="text-center fw-bold mb-4">Последни публикации</h2>

            @if (Model.Posts.Any())
            {
                @foreach (var post in Model.Posts)
                {
                    <div class="card mb-4 post-card">
                        <!-- Автор на поста -->
                        <div class="card-header d-flex align-items-center">
                            <img src="@post.AuthorProfilePictureUrl" class="rounded-circle me-2" width="40" height="40" />
                            <strong>@post.AuthorName</strong>
                            <span class="text-muted ms-auto">@post.CreatedOn</span>
                        </div>

                        <!-- Съдържание на поста -->
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <p class="card-text">@post.Content</p>
                        </div>

                        <!-- Footer на поста -->
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <div>
                                <button class="btn btn-outline-primary btn-sm like-btn" data-post-id="@post.Id">
                                    👍 @post.LikeCount
                                </button>
                                <a href="/Post/Details/@post.Id" class="btn btn-outline-secondary btn-sm">💬 Коментари</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-muted">Все още няма публикации.</p>
            }
        </div>

        <!-- Дясна страна -->
        <div class="col-md-3 bg-light text-center p-3 rounded">
            <h5 class="fw-bold">Right Section</h5>
            <p>Coming soon...</p>
        </div>
    </div>
</div>
