@using Freedle.Data.Models
@model Freedle.Web.ViewModels.UserProfileViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Username's Profile</title>
    <style>
        body {
            background: linear-gradient(to bottom, skyblue, lightgray);
            font-family: Arial, sans-serif;
            text-align: center;
        }

        .profile-container {
            max-width: 700px;
            margin: 20px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .profile-pic {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
        }

        .username {
            font-size: 22px;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
        }

        .fullname {
            font-size: 18px;
            color: gray;
        }

        .bio {
            margin-top: 10px;
            font-style: italic;
        }

        .stats {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 10px;
        }

        .stat-item {
            font-size: 16px;
            padding: 8px 15px;
            border: 1px solid gray;
            border-radius: 5px;
            text-decoration: none;
            color: black;
            background-color: white;
            transition: background-color 0.2s ease;
        }

            .stat-item:hover {
                background-color: #f2f2f2;
            }

        .follow-btn {
            display: inline-block;
            margin-top: 15px;
            padding: 8px 16px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 20px;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .follow {
            background-color: #1da1f2;
            color: white;
        }

            .follow:hover {
                background-color: #0d8aec;
            }

        .unfollow {
            background-color: #ff5757;
            color: white;
        }

            .unfollow:hover {
                background-color: #d94c4c;
            }
    </style>
</head>
<body>
    <div class="profile-container">
        <img class="profile-pic" src="@Model.ProfilePictureUrl" alt="Profile Picture">
        <div class="username">
            @if (Model.Gender == Gender.Male)
            {
                <span style="background-color: blue; font-size: 20px; color: white; padding: 3px; border-radius: 50%;">♂</span>
            }
            else if (Model.Gender == Gender.Female)
            {
                <span style="background-color: pink; font-size: 20px; color: white; padding: 5px; border-radius: 50%;">♀</span>
            }
            else if (Model.Gender == Gender.NonBinary)
            {
                <span style="background-color: gold; font-size: 20px; color: white; padding: 5px; border-radius: 50%;">⚪</span>
            }
            @Model.Username
        </div>
        <div class="fullname">@Model.FirstName @Model.LastName</div>
        <div class="bio">@Model.Description</div>

        <div class="stats">
            <a href="@Url.Action("UserFollowingList", "Home", new { id = Model.ProfileUserId })" class="stat-item">
                <strong>@Model.FollowingCount</strong> Following
            </a>
            <a href="@Url.Action("UserFollowersList", "Home", new { id = Model.ProfileUserId })" class="stat-item">
                <strong>@Model.FollowerCount</strong> Followers
            </a>
        </div>

        <form method="post" action="@Url.Action("ToggleFollow", "Home")">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.ProfileUserId" />
            <button id="followBtn" class="follow-btn @(Model.IsFollowing ? "unfollow" : "follow")">
                @(Model.IsFollowing ? "Unfollow" : "Follow")
            </button>
        </form>
    </div>
</body>
</html>
