@model Freedle.Web.ViewModels.EditMyProfileViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <style>
        body {
            background-color: white;
            background-image: radial-gradient(blue 1px, transparent 1px);
            background-size: 20px 20px;
            font-family: Arial, sans-serif;
            text-align: center;
            color: black;
            position: relative;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .edit-container {
            max-width: 500px;
            margin: auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 255, 0.2);
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
            width: 100%;
        }

        label {
            display: block;
            font-weight: bold;
        }

        input {
            width: 100%;
            padding: 8px;
            border-radius: 5px;
            border: 2px solid black;
            background: white;
            color: black;
        }

        .save-btn {
            background-color: green;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

            .save-btn:hover {
                background-color: darkgreen;
            }

        .cancel-btn {
            background-color: red;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
            position: absolute;
            left: -50px;
            top: 10%;
            transform: translateY(-50%);
        }

            .cancel-btn:hover {
                background-color: darkred;
            }

        .container {
            flex-grow: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 4em;
        }

        .footer {
            text-align: center;
            padding: 15px;
            background: white;
            font-size: 14px;
            margin-top: auto;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="edit-container">
            <a href="@Url.Action("MyProfile", "Home")">
                <button class="cancel-btn">✖</button>
            </a>
            <h2>Edit Your Profile</h2>

            <form asp-action="EditProfile" asp-controller="User" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Username:</label>
                    <input asp-for="Username" required />
                </div>

                <div class="form-group">
                    <label>Bio:</label>
                    <input asp-for="Description" />
                </div>

                <div class="form-group">
                    <label>Profile Picture:</label>
                    <input type="file" asp-for="ProfilePicture" accept="image/*" />
                </div>

                <button type="submit" class="save-btn">Save 💾</button>
            </form>
        </div>
    </div>

    <div class="footer">
        © 2025 - Freedle - <a href="#">Privacy</a>
    </div>
</body>
</html>
